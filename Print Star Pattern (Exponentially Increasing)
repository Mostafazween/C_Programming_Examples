#include <stdio.h>
int main()
{
    int row,col,length;
    printf("Enter Length: ");
    scanf("%d",&length);
    for(row=0; row<length; row++)
    {
        for(col=0;col<=row; col++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
