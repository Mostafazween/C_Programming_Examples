#include <stdio.h>
int main()
{
    unsigned int num,rev=0,rem;
    printf("Enter Number: ");
    scanf("%u",&num);
    while(num!=0)
    {
        rem=num%10;
        rev=rev*10+rem;
        num=num/10;
    }
    printf("Number After Reverse Is %u",rev);
    return 0;
}
