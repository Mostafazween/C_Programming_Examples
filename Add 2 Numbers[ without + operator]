#include <stdio.h>

int main()
{
    int x,y;
    printf("Enter 2 Numbers\n");
    scanf("%i%i",&x,&y);
    if (y>0)
    {
        while(y!=0)
        {
            x++;
            y--;
        }
    }
    else if (y<0)
    {
        while(y!=0)
        {
            x--;
            y++;
        }
    }
    printf("SUM = %i",x);
    return 0;
}
