#include <stdio.h>
int main()
{
    int num;
    L1:
    printf("Enter Number: ");
    scanf("%i",&num);
    if(num==0)
    {
        goto L1;
    }
    (num%2==0)?printf("%i Is Even",num):printf("%i Is Odd",num);
    return 0;
}
