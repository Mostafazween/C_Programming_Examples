#include <stdio.h>
int main()
{
    int row,col_star,length,col_space;
    printf("enter Length of Pyramid: ");
    scanf("%d",&length);
    for(row=1;row<=length;row++)
    {
        for (col_space=1;col_space<=length-row;col_space++)
        {
            printf(" ");
        }
        for (col_star=0;col_star<(2*row-1);col_star++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
